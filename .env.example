# Variables de entorno - Copiar a .env

# Database
DATABASE_URL=postgresql://admin:password@localhost:5432/agricultura_iot

# MQTT
MQTT_BROKER=10.0.6.21
MQTT_PORT=8883
MQTT_CLIENT_ID=backend-api-01
MQTT_USERNAME=backend
MQTT_PASSWORD=secure_password

# Redis
REDIS_URL=redis://localhost:6379

# JWT
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AWS
AWS_REGION=us-east-1
AWS_IOT_ENDPOINT=a3xxxxxxx.iot.us-east-1.amazonaws.com
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Certificates
TLS_CA_CERT=/certs/ca.crt
TLS_CLIENT_CERT=/certs/client.crt
TLS_CLIENT_KEY=/certs/client.key

# Application
DEBUG=True
LOG_LEVEL=INFO
